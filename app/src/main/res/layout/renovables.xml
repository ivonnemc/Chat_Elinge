<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:text="Chat de renovables"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:id="@+id/textView9"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textStyle="normal|bold"
        android:textSize="34sp"
        android:textColor="@android:color/black"
        android:textAlignment="center" />

    <TextView
        android:text="Seleccione el tipo de chat que desea usar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:id="@+id/textView10"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:textAlignment="center"
        android:layout_below="@+id/textView9"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Crear horario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button31"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="11dp"
        android:id="@+id/button32"
        android:background="@android:color/holo_blue_light"
        android:textSize="24sp"
        android:textAlignment="center"
        android:textColor="@android:color/background_light" />

    <Button
        android:text="Chat alumno-profesor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button31"
        android:background="@android:color/holo_blue_light"
        android:textSize="24sp"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:layout_marginTop="11dp"
        android:layout_below="@+id/button30"
        android:layout_alignEnd="@+id/textView9" />

    <Button
        android:text="Visualizar horario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:id="@+id/button33"
        android:background="@android:color/holo_blue_light"
        android:textSize="24sp"
        android:textColor="@android:color/background_light"
        android:textAlignment="center"
        android:layout_below="@+id/button32"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Regresar"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="29dp"
        android:id="@+id/button34"
        android:textSize="24sp"
        android:textColor="@android:color/background_light"
        android:background="@android:color/holo_blue_light"
        android:textAlignment="center"
        android:layout_alignStart="@+id/button30" />

    <Button
        android:text="Salir"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:layout_alignBottom="@+id/button34"
        android:id="@+id/button35"
        android:background="@android:color/holo_blue_light"
        android:textSize="24sp"
        android:textColor="@android:color/background_light"
        android:textAlignment="center"
        android:layout_alignEnd="@+id/button30" />

    <Button
        android:text="Chat alumno-alumno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button30"
        android:background="@android:color/holo_blue_light"
        android:textSize="24sp"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:layout_below="@+id/textView10"
        android:layout_centerHorizontal="true" />
</RelativeLayout>