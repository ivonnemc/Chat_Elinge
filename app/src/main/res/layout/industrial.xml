<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="Chat de industrial"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView6"
        android:layout_marginTop="25dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textSize="34sp"
        android:textColor="@android:color/black"
        android:textStyle="normal|bold"
        android:textAlignment="center" />

    <TextView
        android:text="Seleccione el tipo de chat que desea usar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView6"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="34dp"
        android:id="@+id/textView8"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:textAlignment="center" />

    <Button
        android:text="Chat alumno-alumno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:id="@+id/button24"
        android:background="@android:color/holo_blue_light"
        android:textSize="24sp"
        android:textColor="@android:color/background_light"
        android:textAlignment="center"
        android:layout_below="@+id/textView8"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Crear horario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button25"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:id="@+id/button26"
        android:background="@android:color/holo_blue_light"
        android:textSize="24sp"
        android:textAlignment="center"
        android:textColor="@android:color/background_light" />

    <Button
        android:text="Chat alumno-profesor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button25"
        android:background="@android:color/holo_blue_light"
        android:textSize="24sp"
        android:textColor="@android:color/background_light"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/button24"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Visualizar horario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:id="@+id/button27"
        android:background="@android:color/holo_blue_light"
        android:textSize="24sp"
        android:textColor="@android:color/background_light"
        android:textAlignment="center"
        android:layout_below="@+id/button26"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Regresar"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:layout_marginBottom="31dp"
        android:id="@+id/button28"
        android:background="@android:color/holo_blue_light"
        android:textSize="24sp"
        android:textColor="@android:color/background_light"
        android:textAlignment="center"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/button25" />

    <Button
        android:text="Salir"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:id="@+id/button29"
        android:background="@android:color/holo_blue_light"
        android:textSize="24sp"
        android:textColor="@android:color/background_light"
        android:textAlignment="center"
        android:layout_alignTop="@+id/button28"
        android:layout_alignEnd="@+id/button25" />

</RelativeLayout>