<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light">

    <TextView
        android:text="Seleccione el chat de su carrera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:id="@+id/textView16"
        android:textSize="24sp"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:layout_below="@+id/textView15"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="70dp"
        android:layout_height="60dp"
        app:srcCompat="@drawable/informatica"
        android:id="@+id/imageView5"
        android:layout_alignTop="@+id/button11"
        android:layout_alignEnd="@+id/textView16" />

    <ImageView
        android:layout_width="70dp"
        android:layout_height="60dp"
        app:srcCompat="@drawable/renovables"
        android:id="@+id/imageView7"
        android:layout_alignTop="@+id/button15"
        android:layout_alignStart="@+id/imageView5" />

    <Button
        android:text="Chat de industrial"
        android:layout_width="260dp"
        android:layout_height="50dp"
        android:id="@+id/button14"
        android:background="@android:color/holo_blue_light"
        android:textSize="24sp"
        android:textColor="@android:color/background_light"
        android:textAlignment="center"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/button11"
        android:layout_alignEnd="@+id/button11" />

    <Button
        android:text="Chat de renovables"
        android:layout_width="260dp"
        android:layout_height="50dp"
        android:id="@+id/button15"
        android:background="@android:color/holo_blue_light"
        android:textSize="24sp"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:layout_marginTop="11dp"
        android:layout_below="@+id/imageView6"
        android:layout_alignStart="@+id/button14"
        android:layout_toStartOf="@+id/imageView6" />

    <Button
        android:text="Chat de administración"
        android:layout_width="260dp"
        android:layout_height="50dp"
        android:id="@+id/button16"
        android:textSize="24sp"
        android:textColor="@android:color/background_light"
        android:background="@android:color/holo_blue_light"
        android:layout_marginTop="28dp"
        android:layout_below="@+id/imageView7"
        android:layout_alignStart="@+id/button15"
        android:layout_alignEnd="@+id/button15" />

    <TextView
        android:text="Bienvenido"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView15"
        android:textSize="36sp"
        android:textColor="@android:color/black"
        android:textStyle="normal|bold"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Chat de informática"
        android:layout_width="260dp"
        android:layout_height="50dp"
        android:id="@+id/button11"
        android:textSize="24sp"
        android:textColor="@android:color/background_light"
        android:textAlignment="center"
        android:background="@android:color/holo_blue_light"
        android:layout_above="@+id/imageView6"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/imageView6" />

    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:srcCompat="@drawable/administracion"
        android:id="@+id/imageView8"
        android:layout_alignBottom="@+id/button16"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="90dp"
        app:srcCompat="@drawable/industrial"
        android:id="@+id/imageView6"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/imageView5"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="Salir"
        android:layout_width="70dp"
        android:layout_height="30dp"
        android:id="@+id/button17"
        android:background="@android:color/holo_blue_light"
        android:textSize="18sp"
        android:textColor="@android:color/background_light"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>